{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PWA-Chrome",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "PWA-MSEdge",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "Edge",
            "type": "edge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "MSEdge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            },
            "version": "stable"
        },
        {
            "name": "Firefox",
            "type": "firefox",
            "request": "launch",
            "keepProfileChanges": false,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "enableCRAWorkaround": true,
            "pathMappings": [
                {
                    "url": "webpack:///src/*",
                    "path": "${webRoot}/*"
                }
            ]
        },
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
            "args": ["test", "--runInBand", "--no-cache", "--watchAll=false"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "CI": "true"
            },
            "disableOptimisticBPs": true,
            "envFile": "${workspaceFolder}/src/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Current File",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
            "args": [
                "test",
                "--runInBand",
                "--no-cache",
                "--testTimeout=5000000",
                "--runTestsByPath",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "env": {
                "CI": "true"
            },
            "envFile": "${workspaceFolder}/src/.env"
        }
    ]
}
